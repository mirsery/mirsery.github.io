div#pay
  div.panel-title 
    p 请作者喝杯咖啡 ☕
  - var pay_imgs = theme.pay_icons;
  div(style="clear:both;width:330px")
    div(style="float:left;")
      img(src=pay_imgs[0] style="width:164px")
    div(style="float:right")
      img(src=pay_imgs[1] style="width:164px")  

div#friend-links-panel
  div.panel-title
    p= __('friend_link')
  - var friend_links = theme.friend_links;
  each link in friend_links
    a.link-item(href=link[2] target="_blank")
        div.link-container
          .site-name
            = link[0] 
          .site-desc= link[1]
